
<body>
    <section>
        <h2>Imóveis disponíveis para Comprar:</h2>
        <label for="Estado">Selecione o estado:</label>
        <select name="Estado" id="Estado">
            <option value="todos">Todos</option>
            <option value="saoPaulo">São Paulo</option>
            <option value="rioDeJaneiro">Rio de Janeiro</option>
        </select>
    </section>
    {{#each properties}}
    <section>
        <a href="/imovel/{{entity_id}}">
            <div class="stand1">
                <p>{{name}}</p>
                <p>{{price}}</p>
                <h1>{{type_property}}</h1>
            </div>
        </a>
    </section>
    {{else}}
    {{/each}}
</body>

</html>